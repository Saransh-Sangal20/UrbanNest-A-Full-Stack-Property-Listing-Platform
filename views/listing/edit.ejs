<% layout("layouts/boilerplate.ejs") %>  <!--layouts path is relative to views folder-->
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Edit Listing</h2>
            <form action="/listings/<%= data._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="title-div mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" placeholder="Enter Title" value="<%= data.title %>" class="form-control" id="title" required>
                    <div class="valid-feedback">Title Looks Good!</div>
                    <div class="invalid-feedback">Please provide a title.</div>
                </div>
                <div class="description-div mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" name="description" placeholder="Enter Description" value="<%= data.description %>" class="form-control" id="description" required>
                    <div class="valid-feedback">Description Looks Good!</div>
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>
                <div class="image-div mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="image" placeholder="Enter Image Link/URL" value="<%= data.image %>" class="form-control" id="image">
                    <div class="invalid-feedback">Please provide a valid image URL.</div>
                </div>
                <div class="row">
                    <div class="price-div mb-3 col-md-6 col-lg-6">
                        <label for="price" class="form-label">Price (&#8377;)</label>
                        <input name="price" placeholder="Enter Price (Eg. 12000)" value="<%= data.price %>" class="form-control" id="price" required>
                        <div class="invalid-feedback">Please provide a valid price.</div>
                    </div>
                    <div class="country-div mb-3 col-md-6 col-lg-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="country" placeholder="Enter Country" value="<%= data.country %>" class="form-control" id="country" required>
                        <div class="invalid-feedback">Please provide a valid country name.</div>
                    </div>
                </div>
                <div class="location-div mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="location" placeholder="Enter Location" value="<%= data.location %>" class="form-control" id="location" required>
                    <div class="invalid-feedback">Please provide a valid location.</div>
                </div>
                <button class="btn btn-dark">Update</button>
            </form>
        </div>
    </div>
</body>